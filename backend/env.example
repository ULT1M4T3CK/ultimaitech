# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ultimaitech_portfolio
DB_USER=ultimaitech_user
DB_PASSWORD=your_secure_db_password_here

# JWT Configuration
# IMPORTANT: Generate a strong secret for production!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_strong_jwt_secret_here_use_crypto_randomBytes_to_generate_this_should_be_64_characters_long
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=5002
NODE_ENV=production

# Admin Credentials (these will be hashed and stored in database)
# IMPORTANT: Change these credentials before deploying to production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here

# Security Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
TRUST_PROXY=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Session Configuration
SESSION_SECRET=your_session_secret_here_use_crypto_randomBytes_to_generate

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
